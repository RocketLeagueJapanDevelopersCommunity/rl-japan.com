{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Tokyo)"],
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "assignees": ["@karuhi"],
  "reviewers": ["@karuhi"],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackagePatterns": ["lint", "prettier"],
      "automerge": true
    }
  ]
}
